<div class="container mt-3">
  <div class="row">
    <div class="col-12" align="center">

      <h1><%= @human.name %> </h1>
      <h2><%= link_to "Make a booking", new_human_booking_path(@human) %></h2>

      <div class="card-product d-inline-flex">

        <%= cl_image_tag @human.photo.key%>

        <div class="card-product-infos">
          <h2><%= @human.description %></h2>
          <p><%= @human.address %></p>
          <p>$<%= @human.rate %> Per day</p>
        </div>
      </div>
        <div>
        <h2>Review</h2>
        <% @human.reviews.each do |review| %>
            <p><%= review.rating %> stars - <%= review.description %> - <%= review.booking.user.name %></p>
        <% end %>
        </div>

    </div>
    <div class="col-12">
      <%= link_to "Edit", edit_human_path(@human) %> |
      <%= link_to "Delete", human_path(@human),
          method: :delete,
          data: { confirm: "Are you sure?" } %> |
      <%= link_to "Back to list", humans_path %> |
      
    </div>
  </div>
</div>
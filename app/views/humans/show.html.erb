<div class="container mt-3">
  <div class="row">
    
  <div class="col-12" align="center">

      <h1><%= @human.name %></h1>

      <div class="card-product d-inline-flex">

        <%= cl_image_tag @human.photo.key%>

        <div class="card-product-infos">
          <h2><%= @human.description %></h2>
          <p><%= @human.address %></p>
          <p>$<%= @human.rate %> Per day</p>
        </div>
      </div>
      <div> 
        <p>Review</p>
        <% @human.reviews.each do |review| %>
            <p><%= review.rating %> stars - <%= review.description %> - <%= review.booking.user.name %></p>
        <% end %>
      </div>
   
    </div>
    <div class="col-12">
      <%= link_to "Edit", edit_human_path(@human) %> |
      <%= link_to "Delete", human_path(@human),
          method: :delete,
          data: { confirm: "Are you sure?" } %> |
      <%= link_to "Back to list", humans_path %> |
      <%= link_to "Make a booking", new_human_booking_path(@human) %>
    </div>
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
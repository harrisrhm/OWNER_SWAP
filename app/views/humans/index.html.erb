
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h3 class="name mt-5 mb-5">Rent Human and make your life easy!</h3>
    </div>
  </div>

  <div class="row">
    <% @humans.each do |human| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path human.photo.key, :crop=>"fit" %>');">
          <div class="card-description">
            <h2><%= human.name %></h2>
          </div>
          <%= link_to human.name, human_path(human), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
    <div class="btn btn-flat">
      <%= link_to "Add Human", new_human_path  %>
    </div>

    
</div>
